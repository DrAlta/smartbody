<?xml version="1.0" encoding="utf-8" ?> 
<act>
	<bml>
		<gaze target="elder">
			<!-- Any or all of these options are available -->
			<sbm:lumbar   heading="1" pitch="1" roll="1" blend="0.6" />
			<sbm:thorax   heading="2" pitch="2" roll="2" blend="0.7" />
			<sbm:cervical heading="3" pitch="3" roll="3" blend="0.8" />
			<sbm:cranial  heading="4" pitch="4" roll="4" blend="0.9" />
			<sbm:optical  heading="5" pitch="5" roll="5" blend="1.0" />
			
			<!-- The following synonyms are also available.
				-  In this case, they will each warn about
				-  overwriting existing data (from above elements).
				-->
			<sbm:back  heading="1" pitch="1" roll="1" blend="0.6" />
			<sbm:chest heading="2" pitch="2" roll="2" blend="0.7" />
			<sbm:neck  heading="3" pitch="3" roll="3" blend="0.8" />
			<sbm:head  heading="4" pitch="4" roll="4" blend="0.9" />
			<sbm:eyes  heading="5" pitch="5" roll="5" blend="1.0" />
		</gaze>
	</bml>
</act>
