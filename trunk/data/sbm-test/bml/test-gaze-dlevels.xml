<?xml version="1.0" encoding="utf-8" ?> 
<act>
	<bml>
		<gaze target="elder">
			<description level="1" type="ISI.SBM">
				<!-- Any or all of these options are available -->
				<lumbar   heading="1" pitch="1" roll="1" blend="0.6" />
				<thorax   heading="2" pitch="2" roll="2" blend="0.7" />
				<cervical heading="3" pitch="3" roll="3" blend="0.8" />
				<cranial  heading="4" pitch="4" roll="4" blend="0.9" />
				<optical  heading="5" pitch="5" roll="5" blend="1.0" />
				
				<!-- The following synonyms are also available.
				  -  In this case, they will each warn about
				  -  overwriting existing data (from above elements).
				  -->
				<back  heading="1" pitch="1" roll="1" blend="0.6" />
				<chest heading="2" pitch="2" roll="2" blend="0.7" />
				<neck  heading="3" pitch="3" roll="3" blend="0.8" />
				<head  heading="4" pitch="4" roll="4" blend="0.9" />
				<eyes  heading="5" pitch="5" roll="5" blend="1.0" />
			</description>
		</gaze>
	</bml>
</act>
