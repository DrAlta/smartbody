#	test-gaze-bml-aversion.seq
#	Contributed by Brent Lance of USC

0	echo test aversion offsets
0	test bml speech test aversion offsets

5	echo up 10 degrees
5	test bml speech up 10 degrees
5	test bml <gaze target="camera" direction="UP" angle="10"/>

10	echo up right 15 
10	test bml speech up right 15 
10	test bml <gaze target="camera" direction="UPRIGHT" angle="15"/>

15	echo right 20 
15	test bml speech right 20 
15	test bml <gaze target="camera" direction="RIGHT" angle="20"/>

20	echo down right 25 
20	test bml speech down right 25 
20	test bml <gaze target="camera" direction="DOWNRIGHT" angle="25"/>

25	echo down 30 
25	test bml speech down 30 
25	test bml <gaze target="camera" direction="DOWN" angle="30"/>

30	echo down left 35
30	test bml speech down left 35
30	test bml <gaze target="camera" direction="DOWNLEFT" angle="35"/>

35	echo left 40
35	test bml speech left 40
35	test bml <gaze target="camera" direction="LEFT" angle="40"/>

40	echo up left 45
40	test bml speech up left 45
40	test bml <gaze target="camera" direction="UPLEFT" angle="45"/>




45	echo test gaze head roll
45	test bml speech test gaze head roll
45	test bml <gaze target="camera"/>

50	echo roll positive 45
50	test bml speech roll positive 45
50	test bml <gaze target="camera" sbm:roll="45"/>

55	echo roll negative 45
55	test bml speech roll negative 45
55	test bml <gaze target="camera" sbm:roll="-45"/>

60	echo reset
60	test bml <gaze target="camera"/>
