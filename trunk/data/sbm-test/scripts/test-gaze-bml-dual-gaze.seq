0	echo simultaneous controller tests
0	echo one controller performs gaze with head
0	echo other controller performs expressive movement with torso

0	echo default gaze
0	test bml <gaze target="camera"/>

5	echo two controller gaze shift
5	test bml speech "two controller gaze shift"
5	test bml <gaze target="LEFT" sbm:joint-range="neck eyes"/><gaze target="camera" sbm:joint-range="back chest"><sbm:lumbar pitch="20" pitch-min="20"/><sbm:chest pitch="20" pitch-min="20"/></gaze>

10	echo returning to default
10	test bml <gaze target="camera"/>