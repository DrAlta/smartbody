### Assumes current directory is: core/smartbody/sbm/bin
### Simple Gaze Test Seq Script

# ---- Loading data/sbm-common assets
0	path seq ../../../../data/sbm-common/scripts
0	path ME ../../../../data/sbm-common/common-sk
0	echo >>> Loading common motions and poses...
0	load motions -R ../../../../data/sbm-common/common-sk
0	load poses   -R ../../../../data/sbm-common/common-sk

# ---- Using virtual timing
0	time sleepfps 0
#0	time simfps 60
0	time reset

# ---- Setting characters and default posture
#  Common-sk assets are centered on the pelvis,
#  placed 102 units above the ground plane.
#  Using Unia (Unreal-based) class names for renderer assets
#  Using remote rVoice speech synthesis
#  NOTE: increment time to insure common-init is processed in order.
1	char doctor init common.sk SasoBase.SasoDoctorPerez
1	set character doctor world_offset x 35 y 102 h -17
1	set character doctor voice remote M021

# Setting up skinned mesh
1 char doctor smoothbindweight ../../../../data/mesh/doctor/Doctor.xml
1 char doctor smoothbindmesh ../../../../data/mesh/doctor/faceShape.obj
1 char doctor smoothbindmesh ../../../../data/mesh/doctor/left_handShape.obj
1 char doctor smoothbindmesh ../../../../data/mesh/doctor/pantsShape.obj
1 char doctor smoothbindmesh ../../../../data/mesh/doctor/polySurfaceShape10.obj
1 char doctor smoothbindmesh ../../../../data/mesh/doctor/right_handShape.obj
1 char doctor smoothbindmesh ../../../../data/mesh/doctor/shirtShape.obj
1 char doctor viewer 4


#  Using "test bml" command to avoid hard-coding
#  message id into sequence file.
1  test bml character doctor noecho posture LHandOnHip_Motex

# Setting up example motions
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachRtHigh
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachRtMidHigh
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachRtMidLow
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachLfLow
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachLfHigh
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachLfMidHigh
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachLfMidLow
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachRtLow
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachMiddleHigh
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachMiddleMidHigh
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachMiddleMidLow
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachMiddleLow
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachClose_Lf
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachClose_Rt
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachClose_MiddleHigh
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachClose_MiddleLow
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachClose_MiddleMidHigh
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachClose_MiddleMidLow
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachBehind_High1
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachBehind_High2
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachBehind_Low1
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachBehind_Low2
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachBehind_MidLow1
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachBehind_MidLow2
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachBehind_MidHigh1
2 char doctor reachmotion add ChrHarmony_Relax001_ArmReachBehind_MidHigh2

2.1 char doctor reachmotion build

# Setting up hand grabbing motions
1 char doctor handmotion grabhand ChrHarmony_Relax001_HandGraspSmSphere_Grasp
1 char doctor handmotion reachhand ChrHarmony_Relax001_HandGraspSmSphere_Reach
1 char doctor handmotion releasehand ChrHarmony_Relax001_HandGraspSmSphere_Release


# ---- Setting Camera Parameters
# * Assumes doctor scaled character standing near the origin, as is about 200 units tall
1	viewer open   600 600  400 50
1	camera eye    0 70 240
1	camera center 40 70 0
1	pawn camera init loc 0 166 185
1	set pawn camera world_offset x 0 y 166 z 185
1	set test character doctor


# ---- Testing reach
2 pawn foo init geom box size 4
2 set pawn foo world_offset x 20 y 150 z 40
2 pawn foo2 init geom sphere size 4
2 set pawn foo2 world_offset x 0 y 120 z 45
3 bml char doctor <sbm:reach sbm:handle="rdoctor" effector="r_middle1"/>
3 registerevent reach "$1"
3 bml char doctor <sbm:reach sbm:handle="rdoctor" sbm:foot-ik="true"/>
4 bml char doctor <sbm:reach sbm:handle="rdoctor" sbm:action="pick-up" target="foo"/>
6 bml char doctor <sbm:reach sbm:handle="rdoctor" sbm:reach-finish="true"/>
9 bml char doctor <sbm:reach sbm:handle="rdoctor" sbm:action="put-down" sbm:target-pos="0 10 40"/>
12 bml char doctor <sbm:reach sbm:handle="rdoctor" sbm:reach-finish="true"/>

14 bml char doctor <sbm:reach sbm:handle="rdoctor" sbm:action="pick-up" target="foo2"/>
16 bml char doctor <sbm:reach sbm:handle="rdoctor" sbm:reach-finish="true"/>
18 bml char doctor <sbm:reach sbm:handle="rdoctor" sbm:action="put-down" sbm:target-pos="0 10 -20"/>
20 bml char doctor <sbm:reach sbm:handle="rdoctor" sbm:reach-finish="true"/>

