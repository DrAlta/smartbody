#	test-gaze-bml-roll-bias.seq
#	Contributed by Brent Lance of USC

0	echo roll tests
0	echo roll default
0	test bml <gaze target="camera"/>

5	echo head roll bias
5	test bml speech "head roll bias, positive"
5	test bml <gaze target="camera" sbm:priority-joint="head"><sbm:head roll="30"  interpolate-bias="false"/></gaze>
10	test bml speech "negative"
10	test bml <gaze target="camera" sbm:priority-joint="head" ><sbm:head roll="-30" interpolate-bias="false"/></gaze>
15	test bml <gaze target="camera"/>

20	echo neck roll bias
20	test bml speech "neck roll bias, positive"
20	test bml <gaze target="camera" sbm:priority-joint="neck"><sbm:neck roll="30" interpolate-bias="false"/></gaze>
25	test bml speech "negative"
25	test bml <gaze target="camera" sbm:priority-joint="neck"><sbm:neck roll="-30" interpolate-bias="false"/></gaze>
30	test bml <gaze target="camera"/>

35	echo chest roll bias
35	test bml speech "chest roll bias, positive"
35	test bml <gaze target="camera" sbm:priority-joint="chest"><sbm:chest roll="30" interpolate-bias="false"/></gaze>
40	test bml speech "negative"
40	test bml <gaze target="camera" sbm:priority-joint="chest"><sbm:chest roll="-30" interpolate-bias="false"/></gaze>
45	test bml <gaze target="camera"/>

50	echo back roll bias
50	test bml speech "back roll bias, positive"
50	test bml <gaze target="camera" sbm:priority-joint="back"><sbm:back roll="30" interpolate-bias="false"/></gaze>
55	test bml speech "negative"
55	test bml <gaze target="camera" sbm:priority-joint="back"><sbm:back roll="-30" interpolate-bias="false"/></gaze>
60	test bml <gaze target="camera"/>