#	test-gaze-bml-joint-range.seq
#	Contributed by Brent Lance of USC

0	echo test gaze joint-range
0	echo default gaze shift
0	test bml speech "default gaze shift"
0	test bml <gaze target="LEFT"/>
5	test bml <gaze target="camera"/>

10	echo eyes only
10	test bml speech "eyes only"
10	test bml <gaze target="LEFT" sbm:joint-range="eyes"/>
15	test bml <gaze target="camera"/>

20	echo head only
20	test bml speech "head only"
20	test bml <gaze target="LEFT" sbm:joint-range="head"/>
25	test bml <gaze target="camera"/>

30	echo head to eyes
30	test bml speech "head to eyes"
30	test bml <gaze target="LEFT" sbm:joint-range="head eyes"/>
35	test bml <gaze target="camera"/>

40	echo chest to eyes
40	test bml speech "chest to eyes"
40	test bml <gaze target="LEFT" sbm:joint-range="chest eyes"/>
45	test bml <gaze target="camera"/>

50	echo back to neck
50	test bml speech "back to neck"
50	test bml <gaze target="LEFT" sbm:joint-range="back neck"/>
55	test bml <gaze target="camera"/>
