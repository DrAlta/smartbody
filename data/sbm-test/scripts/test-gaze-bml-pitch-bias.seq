#	test-gaze-bml-pitch-bias.seq
#	Contributed by Brent Lance of USC

0	echo additional pitch tests
0	echo pitch default
0	test bml speech "pitch default"
0	test bml <gaze target="camera"/>

5	echo pitch head bias
5	test bml speech "pitch head bias, positive"
5	test bml <gaze target="camera" sbm:priority-joint="head"><sbm:head pitch="30"/></gaze>
10	test bml speech "negative"
10	test bml <gaze target="camera" sbm:priority-joint="head"><sbm:head pitch="-30"/></gaze>
15	test bml <gaze target="camera"/>

20	echo pitch neck bias
20	test bml speech "pitch neck bias, positive"
20	test bml <gaze target="camera" sbm:priority-joint="neck"><sbm:neck pitch="30"/></gaze>
25	test bml speech "negative"
25	test bml <gaze target="camera" sbm:priority-joint="neck"><sbm:neck pitch="-30"/></gaze>
30	test bml <gaze target="camera"/>

35	echo pitch chest bias
35	test bml speech "pitch chest bias, positive"
35	test bml <gaze target="camera" sbm:priority-joint="chest"><sbm:chest pitch="30" pitch-min="30"/></gaze>
40	test bml speech "negative"
40	test bml <gaze target="camera" sbm:priority-joint="chest"><sbm:chest pitch="-30"/></gaze>
45	test bml <gaze target="camera"/>

50	echo pitch back bias
50	test bml speech "pitch back bias, positive"
50	test bml <gaze target="camera" sbm:priority-joint="back"><sbm:back pitch="30" pitch-min="30"/></gaze>
55	test bml speech "negative"
55	test bml <gaze target="camera" sbm:priority-joint="back"><sbm:back pitch="-30"/></gaze>
60	test bml <gaze target="camera"/>