#	test-gaze-bml-heading-bias.seq
#	Contributed by Brent Lance of USC

0	echo heading tests
0	echo heading default
0	test bml <gaze target="camera"/>

5	echo head heading bias
5	test bml speech "head heading bias, positive"
5	test bml <gaze target="camera" sbm:priority-joint="head"><sbm:head heading="30"/></gaze>
10	test bml speech "negative"
10	test bml <gaze target="camera" sbm:priority-joint="head"><sbm:head heading="-30"/></gaze>
15	test bml <gaze target="camera"/>

20	echo neck heading bias
20	test bml speech "neck heading bias, positive"
20	test bml <gaze target="camera" sbm:priority-joint="neck"><sbm:neck heading="30"/></gaze>
25	test bml speech "negative"
25	test bml <gaze target="camera" sbm:priority-joint="neck"><sbm:neck heading="-30"/></gaze>
30	test bml <gaze target="camera"/>

35	echo chest heading bias
35	test bml speech "chest heading bias, positive"
35	test bml <gaze target="camera" sbm:priority-joint="chest"><sbm:chest heading="30"/></gaze>
40	test bml speech "negative"
40	test bml <gaze target="camera" sbm:priority-joint="chest"><sbm:chest heading="-30"/></gaze>
45	test bml <gaze target="camera"/>

50	echo back heading bias
50	test bml speech "back heading bias, positive"
50	test bml <gaze target="camera" sbm:priority-joint="back"><sbm:back heading="30"/></gaze>
55	test bml speech "negative"
55	test bml <gaze target="camera" sbm:priority-joint="back"><sbm:back heading="-30"/></gaze>
60	test bml <gaze target="camera"/>