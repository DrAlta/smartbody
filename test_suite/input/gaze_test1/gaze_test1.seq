0	begin
	test bml
	<gaze target="camera">
		<sbm:chest/><!-- default zeroes -->
		<sbm:neck pitch="-60" /><!-- upward to jut back -->
		<sbm:head/><!-- default zeroes, trying to realign -->
			
		<!-- the above is the same as...
		<sbm:neck pitch="-60" interpolate-bias="false" />
		-->
	</gaze>
	end

1	snapshot 600 600

